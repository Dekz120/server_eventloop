LSOURCES= elooplib/eventloop.cpp elooplib/server.cpp elooplib/client.cpp elooplib/node.cpp  
SOURCES = bvnServer/main.cpp
HEADERS = ./elooplib

all: bvnserver

bvnserver: main.o eventloop.a
	g++ -std=c++17 main.o eventloop.a -o bvnserver

main.o: $(SOURCES)
	g++ -c -std=c++17 -c -I./elooplib $(SOURCES) 

eventloop.a: eventloop.o
	ar rcs eventloop.a 
	
eventloop.o: $(LSOURCES)
	g++ -c -std=c++17  -c $(LSOURCES)
	
clean:
	rm -rf *.o bvnserver

